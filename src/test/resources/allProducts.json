{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "collection": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "id": {
              "type": "integer"
            },
            "name": {
              "type": "string"
            },
            "cover": {
              "type": "string"
            },
            "isHot": {
              "type": "boolean"
            },
            "rating": {
              "type": "integer"
            },
            "reviewsCount": {
              "type": "integer"
            },
            "category": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "name": {
                  "type": "string"
                },
                "title": {
                  "type": "string"
                },
                "parentCategoryId": {
                  "type": "integer"
                },
                "updatedAt": {
                  "type": "integer"
                },
                "seoInformation": {
                  "type": ["object","null"],
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "description": {
                      "type": "string"
                    },
                    "keywords": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "title",
                    "description",
                    "keywords"
                  ]
                }
              },
              "required": [
                "id",
                "name",
                "title",
                "parentCategoryId",
                "updatedAt",
                "seoInformation"
              ]
            },
            "productDetails": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "cover": {
                      "type": ["string", "null"]
                    },
                    "pack": {
                      "type": "integer"
                    },
                    "packType": {
                      "type": "string"
                    },
                    "form": {
                      "type": "string"
                    },
                    "pillPrice": {
                      "type": "integer"
                    },
                    "strength": {
                      "type": "array",
                      "items": [
                        {
                          "type": "object",
                          "properties": {
                            "activeSubstanceId": {
                              "type": "integer"
                            },
                            "id": {
                              "type": "integer"
                            },
                            "strength": {
                              "type": "integer"
                            },
                            "type": {
                              "type": "string"
                            }
                          },
                          "required": [
                            "activeSubstanceId",
                            "id",
                            "strength",
                            "type"
                          ]
                        }
                      ]
                    },
                    "detailsDiscount": {
                      "type": ["object", "null"],
                      "properties": {
                        "pillPriceDiscount": {
                          "type": "integer"
                        },
                        "finishAt": {
                          "type": "integer"
                        },
                        "updatedAt": {
                          "type": "integer"
                        },
                        "id": {
                          "type": "integer"
                        }
                      },
                      "required": [
                        "pillPriceDiscount",
                        "finishAt",
                        "updatedAt",
                        "id"
                      ]
                    }
                  },
                  "required": [
                    "id",
                    "cover",
                    "pack",
                    "packType",
                    "form",
                    "pillPrice",
                    "strength",
                    "detailsDiscount"
                  ]
                }
              ]
            },
            "activeSubstances": {
              "type": "array",
              "items": [
                {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer"
                    },
                    "name": {
                      "type": "string"
                    }
                  },
                  "required": [
                    "id",
                    "name"
                  ]
                }
              ]
            },
            "updatedAt": {
              "type": "integer"
            }
          },
          "required": [
            "id",
            "name",
            "cover",
            "isHot",
            "rating",
            "reviewsCount",
            "category",
            "productDetails",
            "activeSubstances",
            "updatedAt"
          ]
        }
      ]
    },
    "count": {
      "type": "integer"
    }
  },
  "required": [
    "collection",
    "count"
  ]
}